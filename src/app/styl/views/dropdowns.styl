.lang-dropdown
  display: flex
  align-items: center
  cursor: pointer
  height: 35px
  margin-right: 15px
  padding: 0 15px
  color: $ButtonText
  font-family: $MainFont
  font-smoothing: antialiased
  text-align: center
  font-size: 12px
  line-height: 34px
  transition: background-color 0.5s

  .lang-name
    margin-right: auto

.open .lang-dropdown
  background: $ButtonBg
  border-radius: $ButtonRadius
  background-clip: padding-box

.flag-container
  display: flex
  flex-wrap: wrap
  max-width: 100%

.flag
  margin: 3px
  background-size: 24px 24px
  background-position: center
  cursor: pointer
  width: 24px
  height: 22px
  &.flag-icon-none
    background-image: url("../images/flags/none.png")
  &.NA
    background-image: url("../images/flags/none.png")
  &.toggle
      top: -6px
      border-radius: 0
      background-color: transparent
  &.flag-icon-arabic
      background-image: url("../images/flags/arabic.png")
  &.flag-icon-catalan
      background-image: url("../images/flags/catalan.png")
  &.flag-icon-occitan
      background-image: url("../images/flags/occitan.png")
  &.flag-icon-tibetan
      background-image: url("../images/flags/tibetan.png")
  &.flag-icon-esperanto
      background-image: url("../images/flags/esperanto.png")


