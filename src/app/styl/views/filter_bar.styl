.filter-bar
    z-index: 10
    width: 100%
    opacity: 1
    background-color: $FilterBarBg
    position: absolute
    display: flex
    align-items: center
    justify-content: space-between
    height: 70px
    box-shadow: $TopBarShadow
    -webkit-user-select: none
    padding-top: 38px

    .source
        box-sizing: content-box
        color: $FilterBarText
        text-align: center
        cursor: pointer
        vertical-align: middle
        margin: 0 10px
        padding: 5px 0
        font-family: $MainFontBold
        font-size: 1.22em
        text-transform: uppercase
        border-bottom: 3px solid transparent

        &:hover
            color: $FilterBarTextHover
        &.active
            color: $FilterBarTextHover
            border-bottom: 3px solid $FilterBarActive

    ul.nav-hor
        display inline-block
        vertical-align middle
        float: none
        &:before
            display: none
            content: ""
        &:after
            display: none
            content: ""

    .nav-hor.left
        margin-left: 20px

    .nav.filters
        margin-left: 15px

        & > li
          display inline-block
          vertical-align middle

    .nav-hor.right
        margin-right: 20px
        & > li
            margin-left: 15px

    .filter
        margin-left: 15px

        & > a
            display: inline-block
            padding: 0
            color: $FilterBarText
            background-color: transparent !important

            &:hover
                color: $FilterBarTextHover
        .value
            color: $FilterBarActive


        .dropdown-menu
            scrollable()
            vertical-align: middle
            max-height: 448px
            margin-top: 11px
            border-top-left-radius: 0
            border-top-right-radius: 0

    i.material-icons
        transition: color 0.5s
        margin: 0
        color: $FilterBarIcon
        vertical-align: middle
        font-size: 1.18em
        &:hover
            color: $FilterBarIconHover
            cursor: pointer

        &.active
            &.favorites
                color: $FavoriteColor
                &:hover
                    color darken($FavoriteColor, 10)
                    transition all .5s

            &.watchlist
                color: $FilterBarActive

            &.torrent-collection
                color: $FilterBarActive

            &.about
                color: $FilterBarIconHover

    .clear
        display: none
