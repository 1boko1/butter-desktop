.filter-bar
    z-index: 10
    width: 100%
    opacity: 1
    height: 35px
    background-color: $FilterBarBg
    position: absolute
    top: $TitleHeight
    display: flex
    align-items: center
    justify-content: space-between
    height: $FilterBarHeight
    box-shadow: $TopBarShadow
    -webkit-user-select: none

    .source
        box-sizing: content-box
        color: $FilterBarText
        text-align: center
        cursor: pointer
        height: 20px
        vertical-align: middle
        margin: 10px
        padding: 5px 0
        font-family: $MainFontBold
        font-size: 1.22em
        text-transform: uppercase
        border-bottom: 3px solid transparent

        &:hover
            color: $FilterBarTextHover
        &.active
            color: $FilterBarTextHover
            border-bottom: 3px solid $FilterBarActive

    ul.nav-hor
        display inline-block
        vertical-align middle
        float: none

    .nav-hor.left
        margin-left: 20px
    .nav.filters
        margin-left: 10px

        & > li
          display inline-block
          vertical-align middle

    .nav-hor.right
        margin-right: 20px
        & > li
            margin-left: 15px

    .filter
        padding: 10px 0 0
        margin-left: 15px

        & > a
            display: inline-block
            padding: 0
            color: $FilterBarText
            background-color: transparent !important

            &:hover
                color: $FilterBarTextHover
        .value
            color: $FilterBarActive
            padding-left: 10px

        .dropdown-menu
            scrollable()
            vertical-align: middle
            max-height: 448px
            margin-top: 11px
            border-top-left-radius: 0
            border-top-right-radius: 0

    i.material-icons
        transition: color 0.5s
        margin: 0
        color: $FilterBarIcon
        vertical-align: middle
        font-size: 1.18em
        &:hover
            color: $FilterBarIconHover
            cursor: pointer

        &.active
            &#filterbar-favorites
                color: $FavoriteColor
                &:hover
                    color darken($FavoriteColor, 10)
                    transition all .5s

            &#filterbar-watchlist
                color: $FilterBarActive

            &#filterbar-torrent-collection
                color: $FilterBarActive

            &#filterbar-about
                color: $FilterBarIconHover

    .clear
        display: none
