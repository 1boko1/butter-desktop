
#show-header
    .show-header
        top 100px
        background transparent
        padding-top: 0
        left: 0px
        right: 0px

        .panel
            background transparent
            margin: 0
            a.source
                font-size 1.3em
                padding: 6px 0
                margin: 0 15px
                &:hover,
                &:focus
                    text-decoration none

        ul
            width: 100%
            left: 0
            padding: 20px
            overflow-x: auto
            overflow-y: hidden

            &::-webkit-scrollbar
                width: 0
                height: 25px

            &::-webkit-scrollbar-button:horizontal
                display: block
                width: 25px
                background-color: rgba(0,0,0,0.75)

            &::-webkit-scrollbar-button:decrement
                background-image: url('../images/icons/scrollbar/scroll-left.png')
                background-repeat: no-repeat
                background-position: center
                background-size: 75%
                border-radius: 5px 0 0 5px;

            &::-webkit-scrollbar-button:increment
                background-image: url('../images/icons/scrollbar/scroll-right.png')
                background-repeat: no-repeat
                background-position: center
                background-size: 75%
                border-radius: 0 5px 5px 0;

            &::-webkit-scrollbar-button:start
                display: none

            &::-webkit-scrollbar-button:end
                display: block

            .episode-list
                width: 100%;
                max-height: calc(100vh - 340px)
                overflow-x: hidden
                overflow-y: auto

                background #15161B
                position: absolute;
                color: #FFF
                left: 0
                padding: 15px 35px;
                box-shadow: inset 0 4px 10px rgba(0,0,0,0.1)
                top: 47px

                &::-webkit-scrollbar
                    width: 5px

                &::-webkit-scrollbar-track
                    background-color rgba(0,0,0,0.15)
                    border-radius 2px
                    margin: 10px

                &::-webkit-scrollbar-thumb
                    background-color rgba(255,255,255,0.25)
                    border-radius 2px

                    &:hover
                        background-color: $ScrollBarThumbHover

                &::-webkit-resizer,
                &::-webkit-scrollbar-corner,
                &::-webkit-scrollbar-button,
                &::-webkit-scrollbar-track-piece
                    display none

                li
                    display: inline-block;
                    align-self: auto;
                    list-style: none;
                    width: 20%;
                    text-align: center;
                    width: 150px;
                    box-sizing: border-box;
                    padding: 10px;
                    cursor: pointer
                    vertical-align top

                    span
                        border-radius: 5px;
                        border: 1px solid #111;
                        font-size: 32px;
                        padding: 24px;
                        flex: 1 0 25%;
                        text-align: center;
                        font-weight: bold;
                        display: block;
                        background-color: rgba(0,0,0,0.2);
                        border: 1px solid rgba(0,0,0,0.7);
                        height: 95px;
                        box-sizing: border-box;
                        line-height: 1.4em

                    h4
                        font-size: 13px ;
                        font-weight: normal;
                        margin: 10px 0;
                        opacity: 0.5;
                        height: 30px
                        overflow: hidden;
                    &:hover
                        span
                            background: #FFF
                            border-color #FFF
                            color: #15161B
                        h4
                            opacity 1
.collapsing
    -webkit-transition: none!important;
    transition: none!important;

