.search
    display inline-block
    position relative
    z-index 99
    .dropdown-toggle
        display inline-block
        vertical-align middle
        padding 0 12px
        border-radius 50px
        background rgba(0,0,0,0.25)
        transition background .2s ease
        i.material-icons
            font-size 1.12em
            cursor pointer
            display inline-block
            vertical-align middle
            margin 0
            padding 0
            transition all 0.2s ease
        input[type=text]
            color #FFF
            width 100px
            display inline-block
            vertical-align middle
            background transparent
            margin 0
            outline 0
            border 0
            padding 5px 0
            transition all 0.2s ease
            font-size  0.8em
            line-height 0.75em
    &.open
        input[type=text]
            color #353535
         i.material-icons
            color rgba(0, 0, 0, 0.5)

    .search-items
        height 0
        overflow hidden
        background #fff
        border-radius 0 0 5px 5px
        width 100%
        position absolute
        top 100%
        margin 0
        background #fff
        list-style none
        opacity 0
        transition height 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.5), background 0.2s ease
        .item
            list-style none
            padding 10px 5px
            opacity 0.75
            cursor pointer
            transition all 0.2s ease
            &:hover
                opacity 1
                background #EEEEEE
            .info
                margin 0 5px
            .year
                opacity 0.5
                font-size 14px
            .color
                background #555
                margin-left 5px
                width 25px
                height 40px
                &.orange
                  background #ff9800
                &.blue
                  background #42a5f5
                &.green
                  background #4caf50
