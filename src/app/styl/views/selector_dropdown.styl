.drop-selector
    position: relative
    z-index: 1
    font-family: $MainFont
    font-smoothing: antialiased
    color #FFF
    border-radius:  5px
    border: 0

    .dropdown-backdrop
        display: none

    .select-item
        width: auto
        display: inline-block
        .selected
            margin: 0
            padding: 0
            font-size: 0.9em
            line-height: 0.75em
            min-width: 150px
            text-transform: capitalize

    .dropdown-toggle
        display: flex
        justify-content: space-between
        align-items: center
        position relative
        z-index: 99
        padding: 0px 5px
        align-items: center
        cursor: pointer
        font-family: $MainFontBold
        font-smoothing: antialiased
        text-align: center
        font-size: 16px
        i
            margin-right: 10px
            font-size 14px
        i, div
            display: inline-block
            vertical-align middle

    .dropdown-menu
        z-index: 1
        padding: 0
        padding-top: 5px
        opacity: 0
        overflow-x: hidden
        overflow-y: auto
        width: 100%
        height:0
        max-height: 215px
        margin: 0
        border: 0
        border-radius: 0 0 5px 5px
        box-shadow: none
        display inline-block
        vertical-align top
        transform: translate(0, -30px)!important
        -webkit-transition: transform 0.4s cubic-bezier(0.42, 0, 0, 1.4)
        li
            padding: 0 0 0 10px
            cursor: pointer
            opacity: 0.75
            &:hover
                background: #EEE
                opacity: 1

        &::-webkit-scrollbar
            width 5px

        &::-webkit-scrollbar-track
            background-color #DDD
            border-radius 2px

        &::-webkit-scrollbar-thumb
            background-color $ScrollBarThumb
            border-radius 2px
            &:hover
                background-color: $ScrollBarThumbHover

    &.open
        z-index: 99
        background: #FFF
        color: #252525
        background-clip: padding-box
        border-radius: 5px 5px 0 0

        .dropdown-menu
            background: #FFF
            height: auto
            opacity: 1
            transform: translate(0, -7px)!important

    &.drop-settings
        display: inline-block
        font-size  0.95em

        .dropdown-menu
            li
                padding: 8px 0px 8px 10px

        .dropdown-toggle
            padding: 5px 10px
            border-radius 5px
            color #FFF
            font-weight normal
            line-height 0.70em
            display: inline-block
            width: auto
            background $InputBg
            -webkit-box-shadow: inset 0px 0px 1px 0px rgba(0,0,0,0.85)

            .selected
                text-align: left
                min-width: 125px
                display: inline-block
                padding: 5px
            i
                margin:0!important
                &:after
                    content: "arrow_drop_down"
        &.open
            .dropdown-toggle
                color: #252525
                background: transparent
                -webkit-box-shadow: none
                i
                    &:after
                        content: "arrow_drop_up"



    &.dropup
        .dropdown-menu
            padding: 0
            transform: translate(0, 30px)!important
            border-radius: 5px 5px 0 0
        &.open
            border-radius: 0 0 5px 5px!important
            .dropdown-menu
                transform: translate(0, 7px)!important
