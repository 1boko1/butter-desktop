.drop-selector
    border-radius:  5px
    border: 0
    color #FFF

    .select-item
        width: auto
        display: inline-block
        .selected
            margin: 0
            padding: 0
            font-family: $MainFont
            font-size: 0.9em
            line-height: 0.75em
            min-width: 150px
            text-transform: capitalize

    .dropdown-toggle
        display: flex
        justify-content: space-between
        align-items: center
        position relative
        padding: 0px 5px
        align-items: center
        cursor: pointer
        font-family: $MainFontBold
        font-smoothing: antialiased
        text-align: center
        font-size: 16px
        transition: background-color 0.5s
        i
            margin-right: 10px
            font-size 18px

        i, div
            display: inline-block
            vertical-align middle

    .dropdown-menu
        width: 100%
        margin: 0
        padding: 0
        border: 0
        border-radius: 5px 5px 0 0

        li
            padding-left: 10px

    &.open
        background: #FFF
        color: #252525
        background-clip: padding-box
        border-radius: 0 0 5px 5px
